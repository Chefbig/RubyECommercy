
<table class="table table-striped table-hover table-bordered">
  <thead>
  <tr>
    <th>Date</th>
    <th>Order Total</th>
    <th>Gst</th>
    <th>Pst</th>
    <th>Hst</th>
    <th>Qst</th>
    <th>Payment</th>

    <th>State</th>
    <th>Memo</th>
    <th>Link to Detail</th>
  </tr>
  </thead>

  <tbody>
  <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= number_to_currency(order.total) %></td>
        <td><%= order.gst %></td>
        <td><%= order.pst %></td>
        <td><%= order.hst %></td>
        <td><%= order.qst %></td>
        <td><%= order.payment %></td>
        <td><%= order.state %></td>
        <td><%= order.memo %></td>
        <td><%= link_to 'detail', order %></td>
        </tr>
  <% end %>
  </tbody>
</table>