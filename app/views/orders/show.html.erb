<p id="notice"><%= notice %></p>
<h2>Order</h2>
<table class="table table-striped table-hover table-bordered">
  <thead>
  <tr>
    <th>Date</th>
    <th>Order Total</th>
    <th>Gst</th>
    <th>Pst</th>
    <th>Hst</th>
    <th>Qst</th>
    <th>Payment</th>

    <th>State</th>
    <th>Memo</th>
  </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= @order.created_at %></td>
        <td><%= @order.total %></td>
        <td><%= @order.gst %></td>
        <td><%= @order.pst %></td>
        <td><%= @order.hst %></td>
        <td><%= @order.qst %></td>
        <td><%= number_to_currency(@order.payment) %></td>
        <td><%= @order.state %></td>
        <td><%= @order.memo %></td>
      </tr>
  </tbody>
</table>

</br>


<h3>Order Detail</h3>
<table class="table table-striped table-hover table-bordered">
  <thead>
  <tr>
    <th>Product</th>
    <th>Quantity</th>
    <th>Price</th>
  </tr>
  </thead>

  <tbody>
  <% @line_items.each do |line_item| %>
      <tr>
        <td><%= Product.find(line_item.product_id).name %></td>
        <td><%= line_item.quantity %></td>
        <td><%= number_to_currency(line_item.price) %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Back', me_show_path %>
